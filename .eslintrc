{
  "root": true,
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "requireConfigFile": false,
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended"
  ],
  "rules": {
    "eqeqeq": ["warn", "always", {
      "null": "ignore"
    }],
    "semi": ["warn", "never"],
    "no-undef": "warn",
    "no-var": "warn",
    "comma-dangle": "warn",
    "vue/multi-word-component-names": "off",
    "no-unused-vars": ["warn"]
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "rules": {
        "indent": "off"
      }
    }
  ]
}
