{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "eqeqeq": ["warn", "always", {
      "null": "ignore"
    }],
    "semi": ["warn", "never"],
    "no-undef": "warn",
    "no-var": "warn",
    "comma-dangle": "warn",
    "no-unused-vars": ["warn"]
  }
}